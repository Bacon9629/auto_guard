<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_menu_face_list_outconstrain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/menu_face_list_recycler_outside"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/list_item_shape_uncheck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_face_list_recycler_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_face_list_recycler_outside"
        app:layout_constraintStart_toStartOf="@+id/menu_face_list_recycler_outside"
        app:layout_constraintTop_toTopOf="@+id/menu_face_list_recycler_outside"
        app:srcCompat="@drawable/face" />

    <TextView
        android:id="@+id/menu_face_list_recycler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/menu_face_list_recycler_outside"
        app:layout_constraintEnd_toEndOf="@+id/menu_face_list_recycler_outside"
        app:layout_constraintStart_toStartOf="@+id/menu_face_list_recycler_outside"
        app:layout_constraintTop_toBottomOf="@+id/menu_face_list_recycler_image" />
</androidx.constraintlayout.widget.ConstraintLayout>